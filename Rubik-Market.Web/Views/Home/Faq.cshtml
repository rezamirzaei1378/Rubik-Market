@using Rubik_Market.Domain.ViewModels.FAQ
@model List<FaqClientSideViewModel>
@{
    int count = 1;
}

<section class="inner-page" id="faq-page">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="content">
                    <div class="row">
                        <div class="col-12">
                            @if (Model == null)
                            {
                                <h4>موردی یافت نشد</h4>
                            }
                            else
                            {
                                <div class="accordion mt-3" id="accordionExample">
                                    @foreach (var item in Model)
                                    {
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="heading-@count">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@count" aria-expanded="false" aria-controls="collapse-@count">
                                                    @item.Question
                                                </button>
                                            </h2>
                                            <div id="collapse-@count" class="accordion-collapse collapse" aria-labelledby="heading-@count" data-bs-parent="#accordionExample" style="">
                                                <div class="accordion-body">
                                                    <p>@item.Answer</p>
                                                </div>
                                            </div>
                                        </div>
                                        count++;
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
