@model ActiveAccountViewModel
@{
    ViewData["Title"] = "فروشگاه Rubik - فعال سازی حساب کاربری";
}
<section class="inner-page" id="contact-page">
    <div class="container py-2 py-md-5">
        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1">
                <div class="content">
                    <div class="row">
                        <div class="col-12 col-lg-5 text-center">
                            <img src="assets/images/login.png" alt="">
                        </div>
                        <form asp-controller="Account" asp-action="ActiveAccount" method="post" class="col-12 col-lg-7 pt-5 pt-md-0 align-self-center">
                            <div class="title">تایید حساب کاربری</div>
                            <div class="form-group">
                                <label asp-for="ConfirmCode">کد تایید ارسال شده به ایمیل :</label>
                                <input asp-for="ConfirmCode" type="text" class="form-control">
                                <span asp-validation-for="ConfirmCode"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="تایید کد" class="btn btn-success">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>