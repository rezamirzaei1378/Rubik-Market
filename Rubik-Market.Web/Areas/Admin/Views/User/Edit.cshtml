@model EditUserViewModel
@{
    ViewData["Title"] = "ویرایش کاربر ";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-area="Admin" asp-controller="User" asp-action="Edit" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input type="hidden" asp-for="Id"/>
                            <div class="form-group">
                                <label asp-for="FullName">نام و نام خانواگی کاربر</label>
                                <input type="text" class="form-control" asp-for="FullName">
                            </div>
                            <div class="form-group">
                                <label asp-for="UserEmail">ایمیل کاربر</label>
                                <input class="form-control" asp-for="UserEmail">
                            </div>
                            <div class="form-group form-check">
                                <input class="form-check-input" asp-for="isAdmin">
                                <label class="form-check-label">ادمین کردن کاربر</label>
                            </div>
                            <div class="form-group form-check">
                                <input class="form-check-input" asp-for="isActive">
                                <label class="form-check-label">کاربر فعال شود</label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="ویرایش کاربر" class="btn btn-warning" />
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>