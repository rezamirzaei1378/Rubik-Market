@model Rubik_Market.Domain.ViewModels.Blog.BlogGroups.AddBlogGroupViewModel
@{
    ViewData["Title"] = "ساخت گروه جدید";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-area="Admin" asp-controller="Blog" asp-action="AddBlogGroup" method="post">
                            <div class="form-group">
                                <label asp-for="GroupName"></label>
                                <input type="text" class="form-control" asp-for="GroupName">
                                <span asp-validation-for="GroupName"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="ساخت گروه" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>