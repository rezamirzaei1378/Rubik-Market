@model Rubik_Market.Domain.ViewModels.AboutUs.EditTeamMemberViewModel

@{
    ViewData["Title"] = "ایجاد عضو جدید ";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-area="Admin" asp-controller="AboutUs" asp-action="EditTeamMember" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input type="hidden" asp-for="TeamMemberImgName"/>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="TemaMemberName"></label>
                                <input asp-for="TemaMemberName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="TemaMemberJobTitle"></label>
                                <input asp-for="TemaMemberJobTitle" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="TemaMemberShortDescription"></label>
                                <input asp-for="TemaMemberShortDescription" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="Image"></label>
                                <input type="file" asp-for="Image" class="form-control">
                            </div>
                            <h5 class="my-4 mb-2">لینک ها</h5>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" asp-for="TwitterUrl"></label>
                                </div>
                                <input type="text" asp-for="TwitterUrl" class="form-control">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" asp-for="LinkedInUrl"></label>
                                </div>
                                <input type="text" asp-for="LinkedInUrl" class="form-control">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" asp-for="RedditUrl"></label>
                                </div>
                                <input type="text" asp-for="RedditUrl" class="form-control">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" asp-for="GithubUrl"></label>
                                </div>
                                <input type="text" asp-for="GithubUrl" class="form-control">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" asp-for="ZLinkUrl"></label>
                                </div>
                                <input type="text" asp-for="ZLinkUrl" class="form-control">
                            </div>

                            <div class="form-group">
                                <input type="submit" value="ویرایش عضو تیم" class="btn btn-warning" />
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>