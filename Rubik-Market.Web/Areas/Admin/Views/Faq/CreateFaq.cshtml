@model Rubik_Market.Domain.ViewModels.FAQ.CreateFaqViewModel
@{
    ViewData["Title"] = "ایجاد سوال جدید";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-area="Admin" asp-controller="Faq" asp-action="CreateFaq" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Question"></label>
                                <input type="text" class="form-control" asp-for="Question">
                            </div>
                            <div class="form-group">
                                <label asp-for="Answer"></label>
                                <textarea class="form-control" asp-for="Answer"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="ایجاد سوال جدید" class="btn btn-success" />
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>