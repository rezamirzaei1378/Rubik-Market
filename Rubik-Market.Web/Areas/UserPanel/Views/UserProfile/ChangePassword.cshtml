@model ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";

}
<section class="inner-page" id="profile-page">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="content">
                    <div class="row">
                        <div class="col-12 col-lg-3">
                            <!-- Side Panel -->
                            <partial name="Partials/_UserPorfileSideBar" />
                            <!-- /Side Panel -->
                        </div>
                        <div class="col-12 col-lg-9 pl-lg-0 pr-lg-2 mt-2 mt-lg-0">
                            <div class="content">
                                <div class="row">
                                    <form asp-area="UserPanel" asp-controller="UserProfile" asp-action="ChangePassword" method="post" class="col-12 col-lg-7 pt-5 pt-md-0 align-self-center">
                                        <div class="title">تغییر کلمه عبور</div>
                                        <div class="form-group">
                                            <label asp-for="CurrentPassword"> کلمه عبور فعلی :</label>
                                            <input  class="form-control" asp-for="CurrentPassword">
                                            <span asp-validation-for="CurrentPassword"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="NewPassword">کلمه عبور جدید :</label>
                                            <input type="password" class="form-control" asp-for="NewPassword">
                                            <span asp-validation-for="NewPassword"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="RePassword">تکرار کلمه عبور جدید:</label>
                                            <input type="password" class="form-control" asp-for="RePassword">
                                            <span asp-validation-for="RePassword"></span>
                                        </div>
                                        <div class="form-group mt-3">
                                            <input type="submit" value="تغییر کلمه عبور" class="btn btn-primary">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section LoadFunction
{
    <script>
          document.addEventListener("DOMContentLoaded", function () {
            ActivePage(@ViewData["Current-Page"]);
        });
    </script>
}